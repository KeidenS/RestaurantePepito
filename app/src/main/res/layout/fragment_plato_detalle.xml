<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"


    >

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/lista_imagen_plato"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/detalle_plato_nombre"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/playfair_display_bold"
                android:text="Papa a la Huancaina"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/detalle_plato_precio"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/detalle_plato_nombre"
                android:fontFamily="@font/playfair_display_bold"
                android:gravity="right"
                android:text="S/25.00"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </RelativeLayout>




        <TextView
            android:id="@+id/detalle_plato_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:fontFamily="@font/playfair_display_medium"
            android:textSize="15dp"
            android:text="Un clasico para que disfrutes de los sabores del Peru"

            />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                >


                <Button
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:text="-"
                    android:background="@color/amarillo_h"
                    android:id="@+id/detalle_plato_restar"
                    android:textColor="@color/black"
                    >

                </Button>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:paddingHorizontal="30dp"
                    android:background="@drawable/borde"
                    android:id="@+id/detalle_plato_cantidad"
                    android:textColor="@color/black">

                </TextView>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:text="+"
                    android:background="@color/amarillo_h"
                    android:textColor="@color/black"

                    android:id="@+id/detalle_plato_sumar">

                </Button>


            </LinearLayout>

            <TextView
                android:id="@+id/text_monto_detalle_plato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S/0.00"
                android:textSize="25dp"
                android:fontFamily="@font/playfair_display_bold"
                android:layout_gravity="center"
                android:gravity="right"
                android:textColor="@color/black">

            </TextView>

        </LinearLayout>







        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/detalle_plato_boton_agregar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"

            android:drawableRight="@drawable/agrar_carrito"
            android:textColor="@color/black"
            android:text="AÃ±adir al Carrito"
            android:fontFamily="@font/playfair_display_bold"
            android:background="@color/amarillo_h"/>



    </LinearLayout>




</LinearLayout>
</androidx.core.widget.NestedScrollView>