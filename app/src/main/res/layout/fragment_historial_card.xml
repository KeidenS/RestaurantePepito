<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:elevation="20dp"



    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imagen_estado"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            >

        </ImageView>

        <LinearLayout

            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".30"
            android:autoSizeTextType="uniform"


            >




            <TextView
                android:id="@+id/card_hitorial_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:fontFamily="@font/playfair_display_bold"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:text="Delivery"

                />

            <TextView
                android:id="@+id/card_historial_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"

                android:fontFamily="@font/playfair_display_regular"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:text="Lunes 23 De Mayo Del 2022"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/card_historial_total"

                    android:textSize="18dp"
                    android:fontFamily="@font/playfair_display_medium"

                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".50"
                    android:gravity="center_vertical"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/black"
                    android:text="82.0"
                    />

                <TextView
                    android:id="@+id/card_historial_estado"

                    android:textSize="15dp"
                    android:fontFamily="@font/playfair_display_medium"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".50"
                    android:gravity="center_vertical"
                    android:autoSizeTextType="uniform"
                    android:text="Confirmado"



                    />

            </LinearLayout>








        </LinearLayout>

        <Button
            android:id="@+id/card_historial_boton_detalle"

            android:background="@color/amarillo_h"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/detalle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".10"
            android:gravity="center_vertical"
            android:autoSizeTextType="uniform"


            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>