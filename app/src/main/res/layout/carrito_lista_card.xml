<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    android:id="@+id/carrito_contenedor"

    android:elevation="20dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"






    >




            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:orientation="horizontal"


                >

                <TextView
                    android:id="@+id/card_carrito_nombre"



                    android:fontFamily="@font/playfair_display_medium"

                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".60"
                    android:gravity="center_vertical"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/black"
                    android:text="Papa"
                    android:paddingLeft="10dp"


                    />

                <TextView
                    android:id="@+id/card_carrito_precio"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"




                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/card_carrito_cantidad"

                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".20"
                    android:textColor="@color/black"
                    android:fontFamily="@font/playfair_display_medium"
                    android:gravity="center"
                    android:text="3"
                    android:autoSizeTextType="uniform"

                    />

                <TextView
                    android:id="@+id/card_carrito_subtotal"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".50"
                    android:padding="20dp"
                    android:gravity="center"

                    android:autoSizeTextType="uniform"
                    android:text="S/78.00"
                    android:fontFamily="@font/playfair_display_medium"

                    />


                <Button
                    android:id="@+id/card_carrito_boton_eliminar"
                    android:background="@color/vino_h"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".30"
                    android:autoSizeTextType="uniform"
                    android:drawableLeft="@drawable/ic_eliminar"






                    />


            </LinearLayout>





</com.google.android.material.card.MaterialCardView>