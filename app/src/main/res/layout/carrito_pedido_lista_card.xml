<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    android:layout_marginTop="10dp"


    android:elevation="20dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"



    >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"

             >

                <TextView
                    android:id="@+id/card_carrito_pedido_nombre"
                    android:fontFamily="@font/playfair_display_medium"
                    android:paddingLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".80"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"

                    android:autoSizeTextType="uniform"



                    />

                <TextView
                    android:id="@+id/card_carrito_pedido_precio"
                    android:fontFamily="@font/playfair_display_medium"

                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".30"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"

                    />

                <TextView
                    android:id="@+id/card_carrito_pedido_cantidad"

                    android:fontFamily="@font/playfair_display_medium"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".30"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"

                    />

                <TextView
                    android:id="@+id/card_carrito_pedido_subtotal"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".40"

                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/playfair_display_medium"
                    />





            </LinearLayout>




</com.google.android.material.card.MaterialCardView>



